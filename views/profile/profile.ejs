<!-- views/profile.ejs -->
<!doctype html>
<html ng-app="adminFunctions">
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body ng-controller="mainController">
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Profile Page</h1>
		<a href="/logout" class="btn btn-default btn-sm">Logout</a>
	</div>

	<div class="row">

		<!-- LOCAL INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3><span class="fa fa-user"></span> Current Users</h3>
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Data</th>
							<th>Unread?</th>
							<th>Archived?</th>
							<th>Is Mobile?</th>
							<th>Lead Date</th>
							<th>Lead Quality</th>
							<th>Delete?</th>
						</tr>
					</thead>	
					<tbody>
						<tr ng-repeat="lead in leads">
							<td><a ng-href="/profile/viewLeadContent/{{lead._id}}">View Content</a></td>
							<td>{{lead.flagUnread}}</td>
							<td>{{lead.flagArchive}}</td>
							<td>{{lead.flagMobile}}</td>
							<td>{{lead.leadDate}}</td>
							<td>{{lead.leadQuality}}</td>
							<td><button ng-click="deleteLead(lead._id)">Delete</button></td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>

	</div>

</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular.min.js"></script><!-- load angular -->
<script src="/js/scripts.js"></script>
<script src="/js/core.js"></script>
</body>
</html>
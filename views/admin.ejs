<!-- views/admin.ejs -->
<!doctype html>
<html ng-app="adminFunctions">
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body { padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body ng-controller="mainController">
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Admin Page</h1>
		<a href="/logout" class="btn btn-default btn-sm">Logout</a>
	</div>

	<div class="row">
		{{ users }}
		<!-- LOCAL INFORMATION -->
		<div class="col-sm-7">
			<div class="well">
				<h3><span class="fa fa-user"></span> Current Users</h3>
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Domain</th>
							<th>Name</th>
							<th>Email</th>
							<th>Active?</th>
							<th>Admin?</th>
							<th>Edit</th>
							<th>Delete</th>
						</tr>
					</thead>	
					<tbody>
					<% for(var i=0; i<items.length; i++) {%>
						<tr>
							<td><%= items[i].domain %></td>
							<td><%= items[i].name %></td>
							<td><%= items[i].email %></td>
							<td><%= items[i].flagActive %></td>
							<td><%= items[i].flagAdmin %></td>
							<td><a href="#" class="editLink" rel="<%= items[i]._id %>">Edit</a></td>
							<td><a href="#" class="deleteLink" rel="<%= items[i]._id %>">Delete</a></td>
						</tr>
					<% } %>
					</tbody>
				</table>
					

			</div>
		</div>

	</div>

</div>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular.min.js"></script><!-- load angular -->
<script src="/js/scripts.js"></script>
<script src="/js/core.js"></script>
</body>
</html>
extends layout

block content
  h1= title
  p= copy

  // Wrapper
  #wrapper
    // USER LIST
    h2 User List
    #userList
      table
        thead
          th UserName
          th Email
          th Count
        tbody
    // /USER LIST
    
    // ADD USER
    h2 Add User
    #addUser
      fieldset
        input#inputUserName(type='text', placeholder='Username')
        input#inputUserEmail(type='text', placeholder='Email')
        br
        input#inputUserFullname(type='text', placeholder='Full Name')
        input#inputUserAge(type='text', placeholder='Age')
        br
        input#inputUserLocation(type='text', placeholder='Location')
        input#inputUserGender(type='text', placeholder='gender')
        br
        button#btnAddUser Add User
    // /ADD USER
    br
    h2 Add Email
    #addEmail
      fieldset
        input#inputUserName(type='text', placeholder='Name')
        input#inputUserEmail(type='text', placeholder='Email')
        br
        input#inputUserAddress(type='text', placeholder='Address')
        input#inputUserZip(type='text', placeholder='Zip')
        br
        select(name='addEmailSelect')
          option(value='')
          -each item in items
            option(value=item._id, selected=select)= item.username
        br
        textarea#inputUserComments(type='textarea', placeholder='Location')
        br
        button#btnAddEmail Add Email
    // /ADD USER

  // /WRAPPER